<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>${project.build.name}/bin</outputDirectory>
            <fileMode>755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>../../dynamic-common/scripts</directory>
            <outputDirectory>${project.build.name}/scripts</outputDirectory>
            <fileMode>755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>logs</directory>
            <outputDirectory>${project.build.name}/logs</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>conf</directory>
            <outputDirectory>${project.build.name}/conf</outputDirectory>
            <fileMode>755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>${project.build.name}/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${project.build.name}/conf</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <excludes>
                <!--排除DEV相关配置文件-->
                <exclude>bootstrap-dev.properties</exclude>
                <exclude>log4j2.xml</exclude>
                <exclude>static</exclude>
                <exclude>templates</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    
    <files>
        <file>
            <source>target/${project.build.finalName}.jar</source>
            <outputDirectory>./${project.build.name}/lib/</outputDirectory>
            <destName>${project.build.finalName}.jar</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <!--是否把本项目添加到依赖文件夹下 -->
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>${project.build.name}/lib</outputDirectory>
            <!--将scope为runtime的依赖包打包 -->
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>